.y-job-list-view
  dock()

  .y-no-jobs
    dock()

  .y-jobs
    dock(top:y-desktop-header-height)
    overflow auto

  .y-job
    cursor pointer
    padding 10px
    border-left 3px solid transparent
    border-bottom 1px solid #ddd
    &:hover
      background #f5f5f5
    &.y-active
      background #eee
      border-left-color y-color-yellow-dk
      border-left-color y-color-grey-md
    .progress
      height 8px
      margin-bottom 5px
  .y-job-title
    font-size 18px
    font-weight 300
  .y-job-caption
    font-size 12px
    color #888
    overflow ellipsis


