.y-model-list-view
  dock()

  .y-no-models
    dock()

  .y-models
    dock(top:y-desktop-header-height, bottom:y-desktop-header-height)
    overflow auto

  .y-model
    padding 10px
    border-left 3px solid transparent
    border-bottom 1px solid #ddd
    &:hover
      background #f5f5f5
    &.y-active
      background #eee
      border-left-color y-color-yellow-dk
      border-left-color y-color-grey-md
    input[type='checkbox']
      position relative
      float left
      top 18px
  .y-model-details
    cursor pointer
    margin-left 25px 
  .y-model-title
    font-size 18px
    font-weight 300
  .y-model-caption
    font-size 11px
    text-transform uppercase
    color #888
    overflow ellipsis
  .y-model-cutline
    font-size 11px
    color #888
    overflow ellipsis

  
  .y-create-model
    dock-bottom(y-desktop-header-height)
    text-align center
    border-top 1px solid #ddd
    button
      position relative
      width 50%
      top 7px

