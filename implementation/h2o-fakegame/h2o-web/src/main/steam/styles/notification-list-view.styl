// Duplicate of y-frame-list-view. Refactor
.y-notification-list-view
  dock()

  .y-no-notifications
    dock()

  .y-notifications
    dock()
    overflow auto

  .y-notification
    cursor pointer
    padding 10px
    border-left 3px solid transparent
    border-bottom 1px solid #ddd
    &:hover
      background #f5f5f5
    &.y-active
      background #eee
      border-left-color y-color-yellow-dk
      border-left-color y-color-grey-md
  .y-notification-title
    font-size 18px
    font-weight 300
  .y-notification-caption
    font-size 11px
    text-transform uppercase
    color #888
  .y-notification-cutline
    font-size 11px
    color #888
    overflow ellipsis


